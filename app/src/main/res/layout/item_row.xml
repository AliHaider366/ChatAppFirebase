<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/leftChatLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_background"
            android:backgroundTint="@color/receive_message"
            android:padding="8dp"
            android:layout_marginEnd="80dp">

            <TextView
                android:id="@+id/leftChatMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello! How Are You"
                android:textColor="@color/white"
                android:textSize="16sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rightChatLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_background"
            android:backgroundTint="@color/sent_message"
            android:layout_alignParentEnd="true"
            android:padding="8dp"
            android:layout_marginStart="80dp">

            <TextView
                android:id="@+id/rightChatMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello! How Are You"
                android:textColor="@color/white"
                android:textSize="16sp"/>


    </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>